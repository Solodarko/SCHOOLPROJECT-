# Production Environment Variables for Schoolproject

# Database Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=SecurePassword123!
MONGO_DB_NAME=schoolproject

# Backend Configuration
NODE_ENV=production
PORT=5000
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production

# MongoDB Connection
MONGODB_URI=mongodb://admin:SecurePassword123!@mongodb:27017/schoolproject?authSource=admin

# Zoom API Configuration (replace with your actual values)
ZOOM_CLIENT_ID=your-zoom-client-id
ZOOM_CLIENT_SECRET=your-zoom-client-secret
ZOOM_ACCOUNT_ID=your-zoom-account-id

# Frontend Configuration
FRONTEND_URL=http://localhost
REACT_APP_API_BASE_URL=http://localhost/api

# Session and Security
SESSION_SECRET=your-session-secret-key-change-this

# Email Configuration (if used)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password

# Redis Configuration (if using Redis)
REDIS_URL=redis://redis:6379

# SSL Configuration (for HTTPS)
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/private.key

# Logging Level
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# File Upload Limits
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
