# Server Configuration
NODE_ENV=production
PORT=5000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/schoolproject_production
# Or for MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/schoolproject_production

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Frontend URL (Your domain)
FRONTEND_URL=https://your-domain.com

# Zoom API Configuration (Get from Zoom Marketplace)
ZOOM_CLIENT_ID=your_zoom_client_id
ZOOM_CLIENT_SECRET=your_zoom_client_secret
ZOOM_ACCOUNT_ID=your_zoom_account_id
ZOOM_WEBHOOK_SECRET=your_zoom_webhook_secret

# File Upload Configuration
UPLOAD_DIR=/var/www/schoolproject/uploads
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Face API Model Path
FACE_API_MODELS_PATH=/var/www/schoolproject/backend/models

# CORS Origins (comma separated)
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# SSL/TLS (if using HTTPS)
SSL_CERT_PATH=/etc/ssl/certs/your-domain.pem
SSL_KEY_PATH=/etc/ssl/private/your-domain.key
